{
  "compilerOptions": {
    "outDir": "./dist/",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "target": "es6",
    "lib": ["es2017", "dom"],
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../shared_library/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "src/index.js",  "tailwind.config.js"]
}
