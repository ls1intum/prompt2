{
  "compilerOptions": {
    "outDir": "./dist/",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "typeRoots": ["./node_modules/@types", "./@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../shared_library/*"],
      "@core/*": ["src/*"],
      "@managementConsole/*": ["src/managementConsole/*"],
      "react-hook-form": ["../node_modules/react-hook-form"],
      "team_allocation_component/*": ["../team_allocation_component/src/*"],
      "intro_course_developer_component/*": ["../intro_course_developer_component/src/*"],
      "intro_course_tutor_component/*": ["../intro_course_tutor_component/src/*"],
      "application_component/*": ["../application_component/src/*"],
      "interview_component/*": ["../interview_component/src/*"],
      "matching_component/*": ["../matching_component/src/*"],
      "assessment_component/*": ["../assessment_component/src/*"],
      "devops_challenge_component/*": ["../devops_challenge_component/src/*"],
      "self_team_allocation_component/*": ["../self_team_allocation_component/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "src/index.js", "tailwind.config.js", "postcss.config.js"],
}
